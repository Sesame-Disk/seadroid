<?xml version="1.0" encoding="utf-8"?>
<network-security-config xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="n">
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">https://app.nihaoconsult.com/</domain>
        <domain includeSubdomains="true">https://app.nihaocloud.com/</domain>
        <domain includeSubdomains="true">https://app.nihaoshares.com/</domain>
        <domain includeSubdomains="true">https://nihaoconsult.com/</domain>
    </domain-config>
</network-security-config>
